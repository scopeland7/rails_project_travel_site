<div class= "container">  
  <p id="notice"><%= notice %></p>

  <h1>Listing Destinations</h1>
  <%= link_to 'New Destination', new_destination_path %><span></span>

  <ul class="nav nav-pills" role="tablist">
    
    <li><%= link_to "All Destinations", destinations_path %></li>

    <% @my_countries.each do |country| %>
      <li><%= link_to "#{country.country}", controller: "destinations", country: "#{country.country}" %></li>
    <% end %>

  </ul>

<div class="row">
  <% @destinations.each do |destination| %>
    <div class="col-md-4">   
      <div class="well">
        <p><%= "#{destination.city}, #{destination.country}" %></p>
        <p>Native Species: <%= "#{destination.natives}" %></p>
        <p><%= destination.description %>
        <p><%= link_to 'Show', destination, class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_destination_path(destination), class: "btn btn-success" %>
              <%= link_to 'Destroy', destination, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    </div>
  <% end %>
</div>

